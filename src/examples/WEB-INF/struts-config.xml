<?xml version="1.0" encoding="ISO-8859-1"?>
<struts-config>
    <!-- ========== Form Bean Definitions =================================== -->
    <form-beans>
        <form-bean name="loginForm" type="examples.LoginForm"/>
        <form-bean name="formFileForm" type="examples.FormFileForm"/>
    </form-beans>
    <!-- ========== Global Forward Definitions ============================== -->
    <global-forwards>
        <forward name="login" path="/login/login.jsp"/>
        <forward name="success" path="/main/success.jsp"/>
    </global-forwards>
    <!-- ========== Action Mapping Definitions ============================== -->
    <action-mappings>
        <!-- Process a user logon -->
        <action path="/login" type="examples.LoginAction" name="loginForm" input="/login/login.jsp" scope="request" />
        <!-- Process file upload -->
        <action path="/upload" type="examples.FormFileAction" name="formFileForm" input="/login/login.jsp" scope="request" />
    </action-mappings>
    
    <!-- specify controller so that tests work with struts 1.3 -->
    <controller processorClass="org.apache.struts.action.RequestProcessor" />    

</struts-config>
